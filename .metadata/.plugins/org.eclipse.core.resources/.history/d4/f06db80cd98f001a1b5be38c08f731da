package com.colony.buildings;

import com.badlogic.gdx.scenes.scene2d.Stage;
import com.colony.commons.Materiale;
import com.colony.commons.TipoEdificio;

public class Pozzo extends Edificio {
	public Pozzo(float x, float y, Stage s) {
		super(x, y,s);
		tipoEdificio = TipoEdificio.POZZO;

		prodotto = Materiale.ACQUA;
	}

	public static void main(String s[]) {

		Pozzo p = new Pozzo(10, 10);

		while (true) {

			p.work();

			try {
				Thread.sleep(2000);
			} catch (InterruptedException e) {

			}
		}

	}
}
