package com.colony.buildings;

import java.util.ArrayList;
import java.util.List;

import com.badlogic.gdx.scenes.scene2d.Stage;
import com.colony.enums.TipoEdificio;

public class BuildingsHub {
	private static List<Edificio> edifici = new ArrayList<>();

	public static Pozzo createPozzo(float x, float y, Stage stage) {
		Pozzo p = new Pozzo(x, y, stage);
		edifici.add(p);
		return p;

	}

	public static Edificio createCastello(float x, float y, Stage s) {
		Castello p = new Castello(x, y, s);
		edifici.add(p);
		return p;

	}

	public static List<Edificio> getEdificiType(TipoEdificio t) {
		List<Edificio> out = new ArrayList<>();
		for (Edificio ed : edifici)
			if (ed.getTipoEdificio() == t)
				out.add(ed);
		return out;
	}

	public static Edificio getNearestEdificio(TipoEdificio t, float x, float y) {
		List<Edificio> out = getEdificiType(t);
		if (out.size() == 0)
			return null;

		Edificio near = out.get(0);
		float minDist = calcDist(x, y, near.getX(), near.getY());
		for (Edificio ed : out) {
			float d = calcDist(x, y, ed.getX(), ed.getY());
			if (d < minDist) {
				minDist = d;
				near = ed;
			}
		}
		return near;

	}

	private static float calcDist(float x, float y, float x2, float y2) {
		return (x - x2) * (x - x2) + (y - y2) * (y - y2);

	}
}
