package com.colony.commons;

import com.badlogic.gdx.math.Vector2;
import com.badlogic.gdx.scenes.scene2d.Stage;
import com.colony.BaseActor;
import com.colony.buildings.abst.Edificio;
import com.colony.enums.TipoElemento;

public class Milestone extends BaseActor {

	private Vector2 start = new Vector2();
	private Vector2 end = new Vector2();
	private Stage stage;

	public Stage getStage() {
		return stage;
	}

	public Milestone(float x, float y, Stage s) {
		super(x, y, s, TipoElemento.MILESTONE);
		start.x = x;
		start.y = y;
		edificio = new Edificio(y, y, s, null, "") {

			@Override
			public void work() {
			}
		};
		this.stage = s;	
	}

	public Vector2 getStart() {
		return start;
	}

	public Vector2 getEnd() {
		return end;
	}

	public void setEnd(float x, float y) {
		end.x = x;
		end.y = y;
	}
